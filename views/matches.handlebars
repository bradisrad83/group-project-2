{{>nav}}

<div class="well container">
  <div class="profiles">

    <legend>Your Matches</legend>
    {{#each profiles}}
      <div id="{{id}}">

        <div class="row">
          <div class="col-md-4">
            <img src="{{imgLink}}" class="img-responsive">
          </div>
          <div class="col-md-6">
            <h3>Name: {{firstName}} {{lastName}}</h3>
            <h4>State: {{location}}</h4>
            <h4>Zipcode: {{zipCode}}</h4>
            <p>Bio: {{bio}}</p>
          </div> <!--/column-->
        </div> <!--/row-->
      </div><!--/id-->
    {{/each}}

  </div> <!--/profiles-->
</div> <!--/container-->
